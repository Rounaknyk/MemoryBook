rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own profile (no coupleId required for this)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Only partnered users can access couple data
    match /couples/{coupleId} {
      allow read: if request.auth != null && request.auth.token.coupleId == coupleId;
      allow write: if request.auth != null && request.auth.token.coupleId == coupleId;
      
      // Couple-scoped memories
      match /memories/{memoryId} {
        allow read: if request.auth != null && request.auth.token.coupleId == coupleId;
        allow create: if request.auth != null && 
                         request.auth.token.coupleId == coupleId &&
                         request.resource.data.keys().hasAll(['date', 'title', 'caption', 'notes', 'imageUrls', 'createdAt', 'updatedAt', 'userId']);
        allow update: if request.auth != null && request.auth.token.coupleId == coupleId;
        allow delete: if request.auth != null && request.auth.token.coupleId == coupleId;
      }
    }
  }
}
